<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="CalculatorNumbersButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/main_btn_size</item>
        <item name="android:backgroundTint">@color/teal_700</item>
        <item name="android:padding">@dimen/main_btn_padding</item>
        <item name="android:layout_margin">@dimen/number_btns_margin</item>
        <item name="android:layout_weight">@integer/layout_weight_value</item>
    </style>

    <style name="CalculatorScreenInterface">
        <item name="android:background">@color/teal_200</item>
        <item name="android:textSize">@dimen/main_result_tv_size</item>
        <item name="android:layout_height">@dimen/main_result_tv_height</item>
    </style>

    <style name="CalculatorOperationsButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/main_btn_size</item>
        <item name="android:backgroundTint">@color/teal_900</item>
        <item name="android:padding">@dimen/main_btn_padding</item>
        <item name="android:layout_margin">@dimen/operations_btns_margin</item>
        <item name="android:layout_weight">@integer/layout_weight_value</item>
    </style>

    <style name="LinearWeightValue">
        <item name="android:layout_weight">@integer/layout_weight_value</item>
        <item name="android:background">@color/white</item>
    </style>

</resources>
